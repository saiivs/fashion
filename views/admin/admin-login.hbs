<script>
  function validName(){
    const messg=document.getElementById("ERR_1")
    const con=document.getElementById("f1").value
    if(con==""){
      messg.innerHTML="| Fill The Fields"
      return false;
    }
    if(!con.match(/^[a-zA-Z]*$/)){
      messg.innerHTML="| Only Alphabets Are Allowed"
      return false;
    }
    messg.innerHTML=""
    return true;
  }
  function validPass(){
  const value=document.getElementById('f2').value
  const messg=document.getElementById('ERR_2')
    if(value==""){
    messg.innerHTML="| Please Fill The Fields"
    return false;
      }
    if(value.length < 4){
    messg.innerHTML="| Password must be above 4"
    return false;
      }
    messg.innerHTML=""
    return true;
}
</script>
