<section class="container pt-4">
<table id="myTable"  class="table text-dark ">
  <thead>
    <tr>
      <th scope="col">Sl No</th>
      <th scope="col">username</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">status</th>
       <th scope="col">Action</th>
      {{!-- <th scope="col">Edit</th>
      <th scope="col">Delete</th> --}}
    </tr>
  </thead>
  <tbody  >
    {{#each data}}
    <tr>
      <td scope="row">{{inc @index}}</td>
       <td>{{this.username}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      {{#if this.status}}
      <td><a class="bg-success text-white rounded py-1 px-2" href="#">Active</a></td>
      {{else}}
      <td><a class="bg-danger text-white rounded py-1 px-2" href="#">Blocked</a></td>
      {{/if}}


      {{#if this.status}}
      <td><a class="btn btn-outline-warning rounded"  onclick="Block('{{this._id}}','{{this.username}}')">Block</a></td>
      {{else}}
      <td><a class="btn btn-outline-danger rounded" onclick="UnBlock('{{this._id}}','{{this.username}}')" >UnBlock</a></td>
      {{/if}}
 
       
      {{!-- <td><a class="btn btn-danger" onclick= " return confirm('are you sure to delete {{this.name}}')" href="/admin/delete-user/{{this._id}}">Delete</a></td> --}}
       
    </tr>
    {{/each}}
   
  </tbody>
</table>
</section>


