    <section class="container pt-4 table-responsive ">

        <table id="myTable" class="table text-dark ">
            <thead>
                <tr>
                    <th scope="col">SL.NO</th>
                    <th scope="col">PRODUCT</th>
                    <th scope="col">PRICE</th>
                    <th scope="col">IMAGE</th>
                    <th scope="col">OFFERS</th>

                    {{!-- <th scope="col">Edit</th>
                    <th scope="col">Delete</th> --}}
                </tr>
            </thead>
            <tbody>
                {{#each pro}}
                <tr>
                    {{!-- <th scope="row"><input type="checkbox" /></th> --}}
                    <td>{{inc @index}}</td>
                    <td class="tm-product-name">{{this.name}}</td>
                    <td class="tm-product-name">{{this.price}}</td>



                    <td><img class="rounded" style="width: 50px;height: 50px" src="/pro-img/{{this._id}}.jpg" alt="">
                    </td>
                    {{#if this.offername}}
                    <td class="tm-product-name"><button style="font-size:small ;" onclick="Rmv('{{this._id}}')"
                            type="button" class="btn btn-danger rounded px-3 py-2">
                            REMOVE
                        </button>&nbsp;<span class="text-danger">{{#if
                            this.offername}}{{this.offername}}%&nbsp;Applied{{/if}}</span></td>
                    {{else}}
                    <td class="tm-product-name"><button type="button" class="btn btn-primary rounded px-3 py-2"
                            data-toggle="modal" data-target="#b{{this._id}}">
                            OFFERS
                        </button>&nbsp;<span class="text-danger">{{#if
                            this.offername}}{{this.offername}}%&nbsp;Applied{{/if}}</span></td>
                    {{/if}}

                    {{!-- <td><a class="btn btn-warning btn-sm px-2 py-2 rounded"
                            href="/admin/edit-pro/{{this._id}}">Edit</a>
                    </td> --}}

                    {{!-- <td>
                        <a onclick="return confirm('are you sure to delete'+ {{this.name}})"
                            href="/admin/del-pro/{{this._id}}" class="tm-product-delete-link">
                            <i class="far fa-trash-alt tm-product-delete-icon"></i>
                        </a>
                    </td> --}}
                </tr>
                {{/each}}

            </tbody>
        </table>
        {{#each pro}}
        <div class="modal fade" id="b{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form action="/admin/updateOffer/{{this._id}}" method="post">
                        <div class="modal-body">

                            <label for="category">OFFERS</label>
                            <select class="custom-select tm-select-accounts" id="category" name="offer">
                                <option selected>Select Offers</option>
                                {{#each ../offer}}
                                <option value="{{this.offername}}">{{this.offername}}</option>
                                {{!-- <option value="2">Most Popular</option>
                                <option value="3">Trending</option> --}}
                                {{/each}}
                            </select>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">ADD</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}

